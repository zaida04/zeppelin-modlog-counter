{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "lib": ["ESNext"],
      "importHelpers": false,
      "downlevelIteration": true,
      "strict": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "declaration": false,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "isolatedModules": true,
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules/**"
    ]
  }